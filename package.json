{
  "name": "todo-issues",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --no-cache",
    "build": "yarn clean && tsc && yarn copy",
    "version": "yarn run build",
    "ci": "yarn run build && yarn test --coverage",
    "cli": "node ./bin/cli.js",
    "copy": "yarn run copy:win && yarn run copy:nix",
    "copy:win": "node -e \"if (process.platform === 'win32') process.exit(1)\" || copy src\\issues\\.template.eta lib\\issues\\.template.eta",
    "copy:nix": "node -e \"if (process.platform !== 'win32') process.exit(1)\" || cp ./src/issues/.template.eta ./lib/issues/.template.eta",
    "clean": "yarn run clean:win && yarn run clean:nix",
    "clean:win": "node -e \"if (process.platform === 'win32') process.exit(1)\" || , if exist lib rmdir /Q /S lib",
    "clean:nix": "node -e \"if (process.platform !== 'win32') process.exit(1)\" || rm -rf ./lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/troublecatstudios/todo-issues.git"
  },
  "author": "Jared Barboza",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/troublecatstudios/todo-issues/issues"
  },
  "homepage": "https://github.com/troublecatstudios/todo-issues#readme",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.7.23",
    "@types/prismjs": "^1.26.0",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@actions/core": "^1.8.2",
    "@actions/exec": "^1.1.1",
    "@actions/glob": "^0.3.0",
    "@actions/io": "^1.1.2",
    "@octokit/plugin-retry": "^3.0.9",
    "@octokit/plugin-throttling": "^3.6.2",
    "@octokit/rest": "^18.12.0",
    "eta": "^1.12.3",
    "js-yaml": "^4.1.0",
    "linguist": "https://github.com/github/linguist#v7.20.0",
    "prismjs": "^1.28.0"
  }
}
