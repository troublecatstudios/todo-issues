{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "baseUrl": "./",
    "outDir": "./dist",
    "sourceRoot": "./src/",
    "sourceMap": true,
    "esModuleInterop": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "newLine": "lf"
  },
  "exclude": [
    "./dist",
    ".github/",
    "./node_modules",
    "./src/**/__tests__/**/*.ts",
    "./src/**/__mocks__/**/*.ts",
    "./src/**/__fixtures__/**/*.ts",
    "./coverage"
  ]
}
