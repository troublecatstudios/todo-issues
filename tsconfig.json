{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "src/__tests__/**/*.ts",
    "src/__mocks__/**/*.ts",
    "src/__fixtures__/**/*.ts"
  ]
}
